<h1 class='jumbotron'>Admin | Products</h1>
<div class='container'>
  <div class='row'>
    <%= link_to 'add product', new_admin_product_path %>
  </div>
  <div class='col-12 card'>
    <table class='table'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody><%= render 'admin_product', collection: @products %>
    </table>
  </div>
</div>