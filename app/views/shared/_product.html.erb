<div class='card'>
  <div class='card-body'>
    <div class='card-title'>
    <% @products.each do |product| %>
      <p><%= product.name %>
    </div>
    <div class='card-text'>
      <p><small> SGD </small><%= product.price %></p>
    </div>
    <div class='card-footer'>
      <%= link_to 'View Product', product_path(product) %>
      <% end %>
    </div>
  </div>
</div>